{
  "compilerOptions": {
    "target": "esnext",
    // Ensure that .d.ts files are created by tsc, but not .js files
    "allowJs": false,
    // Do not generate any file out of tsc
    "noEmit": true,
    // Import non-ES modules as default imports
    "esModuleInterop": true,
    // Ensure that bundlers can safely transpile TS files
    "isolatedModules": true,
    // Use React.createElement to replace JSX code
    "jsx": "react-jsx",
    // Ensure TS understand the DOM and esnext APIs
    "lib": ["dom", "dom.iterable", "esnext"],
    // Set how the final code will be generated
    "module": "esnext",
    // Search under node_modules for non-relative imports
    "moduleResolution": "node",
    // Ensure that all branches return the correct type
    "noImplicitReturns": true,
    // Allow .json files to be imported
    "resolveJsonModule": true,
    // Skip type checking .d.ts files
    "skipLibCheck": true,
    // Enable strictest settings like strictNullChecks & noImplicitAny
    "strict": true,
  },
  "include": ["./src"],
  "exclude": ["**/node_modules", "**/dist"]
}
